import java.util.Scanner;

public class BusquedaArray {
    public static void main(String[] args) {
        // Arreglo con algunos valores
        int[] valores = {1, 2, 3, 4, 5};

        Scanner entrada = new Scanner(System.in);

        System.out.print("Escribe un número a localizar: ");
        int buscado = entrada.nextInt();

        int posicion = -1;

        // Uso de for-each con índice manual
        int indice = 0;
        for (int elem : valores) {
            if (elem == buscado) {
                posicion = indice;
                break;
            }
            indice++;
        }

        if (posicion != -1) {
            System.out.println("Se encontró el valor en la posición: " + posicion);
        } else {
            System.out.println("El valor no está en el arreglo");
        }

        // Mostrar todos los elementos del arreglo
        System.out.println("Estos son los elementos del arreglo:");
        for (int i = 0; i < valores.length; i++) {
            System.out.println(valores[i]);
        }

        entrada.close();
    }
}
